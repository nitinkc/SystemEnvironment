[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[core]
	autocrlf = input
	excludesfile = ~/.gitignore_global

[includeIf "gitdir:~/clonedCode/"]
	path = .gitconfig-work

[includeIf "gitdir:~/Programming/"]
	path = .gitconfig-learn

[init]
	defaultBranch = main
	templatedir = ~/.git-templates
[commit]
	template = ~/.git-templates/.gitmessage
[alias]
	co = checkout
	fpush = push
	cls = !git remote prune origin && git repack && git prune-packed && git reflog expire --expire=1.month.ago && git gc --aggressive
[includeIf "gitdir:~/ClonedCodeWork/"]
	path = .gitconfig-work
[column]
	ui = auto
[maintenance]
	repo = /Users/nichaurasia/Programming/nitinkc.github.io
